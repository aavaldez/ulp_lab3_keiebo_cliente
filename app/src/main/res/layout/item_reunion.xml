<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:cardBackgroundColor="#FFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvItemReunionTitulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Asado en lo de Juan"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="31dp" />

        <TextView
            android:id="@+id/tvItemReunionFecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Sabado 28 de Octubre 21:00"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="67dp" />

        <TextView
            android:id="@+id/tvItemReunionDireccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Junin 765 Porton negro"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="95dp" />

        <Button
            android:id="@+id/btItemReunionVer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="Ver"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="346dp"
            tools:layout_editor_absoluteY="55dp" />

        <Button
            android:id="@+id/btItemReunionConfirmar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:text="Ver"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/btItemReunionVer"
            tools:layout_editor_absoluteY="55dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>